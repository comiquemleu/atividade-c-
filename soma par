#include <stdio.h>
#include <stdlib.h>

int main()
{

    int i, numero[5];
    int soma=0, impar=0, par=0;

    for (i = 0; i < 5; i++)
    {
        printf("digite um numero:");
        scanf("%d", &numero[i]);

        if (numero[i] % 2 == 0)
        {
            soma += numero[i];
            par++;
        
        }else
        {
         impar++;   
        }
        
    }
    printf("numeros: %d \n", impar);
    printf("numeros: %d \n", par);
    printf("soma: %d \n", soma);
    
return 0;
}

